# Adapated from https://gist.github.com/shmatov/3508983
#
# Depends on bash_colors.sh, from https://github.com/maxtsepkov/bash_colors

# We'll take care of the prompt ourselves.
export VIRTUAL_ENV_DISABLE_PROMPT=1

function __git_dirty {
  git diff --quiet HEAD &>/dev/null
  [ $? == 1 ] && clr_red "X"
}

function __git_branch {
  local git_ps1=$(__git_ps1 "%s")
  [ "$git_ps1" != "" ] && clr_escape $(echo "$git_ps1" | sed 's/feature/f/; s/chore/c/; s/bug/b/') $CLR_LIGHT_GRAY
}

function __my_rvm_ruby_version {
  [ -z "$SHOW_RVM" ] && return

  local gemset=$(echo $GEM_HOME | awk -F'@' '{print $2}')
  [ "$gemset" != "" ] && gemset="@$gemset"
  local version=$(echo $MY_RUBY_HOME | awk -F'-' '{print $2}')
  local full="$version$gemset"
  [ "$SHOW_RVM" != "" ] && [ "$full" != "" ] && clr_red "$full"
}

function __virtualenv {
  [ -z "$VIRTUAL_ENV" ] && return

  local env=$(basename "$VIRTUAL_ENV")
  [ "$env" != "" ] && clr_escape "$env" $CLR_LIGHT_BLUE
}

function __node {
  if hash node 2>/dev/null; then
    local v=$(node -v)
  fi
  [ "$v" != "" ] && clr_escape "${v:1}" $CLR_CYAN
}

function __info {
  local full=(
    $(__my_rvm_ruby_version)
    $(__virtualenv)
    $(__node)
    $(__git_branch)
    # $(__git_dirty)
  )
  full="${full[*]}"
  # [ "$full" != "" ] && echo "$full"
  echo "$full"
}

PS1="\$(__info) \w \$ "
BIG_PS1=$PS1
LITTLE_PS1="\$ "

function big_prompt {
    PS1=$BIG_PS1
}

function little_prompt {
    PS1=$LITTLE_PS1
}
